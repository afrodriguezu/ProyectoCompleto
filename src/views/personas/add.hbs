<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppewrcase"> Crear Nueva Persona </h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="input-group mt-2">
                            <label for="" class="input-group-text"> * Nombre Persona </label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo: Andres Felipe" autofocus required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="" class="input-group-text"> * Apellido Persona </label>
                            <input class="form-control" type="text" name="lastname" id="lastname" placeholder="Ejemplo: Rodriguez Huertas" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="" class="input-group-text"> Edad </label>
                            <input class="form-control" type="number" name="age" id="age" placeholder="0" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="" class="input-group-text"> Observacion </label>
                            <input class="form-control" type="text" name="observacion" id="observacion" placeholder="Observacion" required>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Crear </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>