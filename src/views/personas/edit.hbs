<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppewrcase"> Editar una Persona </h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post" enctype="multipart/form-data">
                        <div class="input-group mt-2">
                            <label for="" class="input-group-text"> * Nombre Persona </label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo: Andres Felipe" value="{{persona.name}}" autofocus required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="" class="input-group-text"> * Apellido Persona </label>
                            <input class="form-control" type="text" name="lastname" id="lastname" placeholder="Ejemplo: Rodriguez Huertas" value="{{persona.lastname}}" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="" class="input-group-text"> Edad </label>
                            <input class="form-control" type="number" name="age" id="age" placeholder="0" value="{{persona.age}}" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="" class="input-group-text"> Observacion </label>
                            <input class="form-control" type="text" name="observacion" id="observacion" placeholder="Observacion" value="{{persona.observacion}}" autofocus required>
                        </div>

                        <div class="input-group mt-2">
                            <input class="form-control" type="file" name="file" id="file">
                        </div>

                        {{#if persona.imagen}}
                        <div class="input-group mt-2">
                            <img src="/uploads/{{persona.imagen}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px;display:block;">
                        </div>
                        {{/if}}

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>